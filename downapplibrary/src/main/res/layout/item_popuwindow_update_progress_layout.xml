<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_item_popuWindow_update_progress_appName"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="版本更新"
            android:textColor="#595959"
            android:textSize="16sp" />

        <include layout="@layout/include_part_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="正在下载更新中，请稍后"
            android:textColor="#757575"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_popuWindow_update_progress_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="0B/0B"
            android:textColor="#757575"
            android:textSize="13sp" />

        <ProgressBar
            android:id="@+id/pb_item_popuWindow_update_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/tv_item_popuWindow_update_progress_present"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="0%"
            android:textColor="#757575"
            android:textSize="13sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>